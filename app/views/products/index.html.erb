  <div class="row">
    <div class="col s12 m12 l12">
		<% @response.each do |product| %>
			<div class="col l2 card blue-grey darken-1" style="margin: 10px; max-height: 600px">
		        <div class="card-content white-text">
		          <span class="card-title" style="font-size: 1em"><%=product.title%></span>
		          <div style="    position: relative;height: 100px;width: 100%;">
		          	<img src="<%=product.img%>" style="max-height: 100%;position: absolute; 
		          	transform: translateX(-50%); left: 50%;">
		          </div>
		          <h4>$<%=product.price%></h4>
		          <h5><%=product.shop%></h5>
		        </div>
		        <div class="card-action">
		          <a href="#">Delete Product</a>
		          <a href="products/<%=product.product_id%>/edit">Edit Product</a>
		        </div>
			</div>
		<% end %>
    </div>
  </div>